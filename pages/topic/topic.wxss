.topic_container {}
.topic_wrapper {
  padding-bottom: 120rpx;
}
.topic_wrap {
  padding-bottom: 330rpx;
}

.user_container {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user_info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.avatar .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.user_wrap {
  height: 100rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.loginame {
  font-size: 34rpx;
  color: #333;
}

.time {
  font-size: 30rpx;
  color: #aaa;
}

.collect_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
}

.collect_img {
  width: 50rpx;
  height: 50rpx;
}

.content_container {
  padding: 20rpx;
}

.title {
  display: inline-block;
  width: 100%;
  font-size: 50rpx;
  font-weight: 600;
  text-align: center;
}

.content_wrap {
  margin-top: 20rpx;
}

.content {
  line-height: 1.5;
  font-size: 30rpx;
  color: #333;
}

.replies_title_wrap {
  margin-top: 30rpx;
}

.replies_title {
  box-sizing: border-box;
  display: inline-block;
  width: 100%;
  padding-left: 20rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  border-bottom: 1rpx solid #ccc;
  border-top: 1rpx solid #ccc;
}

.index {
  font-size: 30rpx;
  color: #ccc;
}

.replies_text {
  display: inline-block;
  padding: 0 20rpx;
  line-height: 1.5;
  font-size: 32rpx;
  color: #24292e;
}

.reply_container {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reply_content {
  width: 180rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ups_count {
  font-weight: 34;
  color: #666;
}

.replies_container {
  border-bottom: 1rpx solid #ccc;
}

.reply_model {
  /* display: none; */
  background: red;
  overflow: hidden;
}

.reply_model_show {
  height: 100rpx;
  transition: all 0.3s;
}

.reply_model_hide {
  height: 0;
  transition: all 0.3s;
}
.reply_comment_show {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  transform: translateY(0);
  transition: all 0.3s;
}
.to_speak {
  width: 80%;
  height: 60rpx;
  padding-left: 20rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
  background: #f0f0f0;
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
}

.reply_comment_hide {
  transform: translateY(100%);
  transition: all 0.3s;
}
.write_comment {
  position: fixed;
  left: 0;
  bottom: 0;
  padding: 20rpx;
  background: #fff;
  transform: translateY(100%);
  transition: all 0.3s;
}
.textarea_text {
  height: 200rpx;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 15rpx;
}
.textarea_content {
  height: 200rpx;
  font-size: 32rpx;
}
.btn_wrap {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}
.btn {
  display: inline-block;
  width: 120rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  background: #459dfc;
  text-align: center;
  font-weight: 500;
}
.write_comment_show {
  transform: translateY(0);
  transition: all 0.3s;
}