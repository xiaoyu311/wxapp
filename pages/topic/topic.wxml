<view class='{{comment ? "container topic_wrapper" : "container topic_wrap"}}'>
  <view class='topic_container'>
    <view class='user_container'>
      <view class='user_info'>
        <view class='avatar'>
          <image class='img' mode='widthFix' src='https://avatars1.githubusercontent.com/u/22312483?v=4&s=120'></image>
        </view>
        <view class='user_wrap'>
          <text class='loginame'>imzengyang</text>
          <text class='time'>2月前</text>
        </view>
      </view>
      <view class='collect_wrap'>
        <image class='collect_img' mode='widthFix' src='../../images/collect-off.png'></image>
      </view>
    </view>
    <view class='content_container'>
      <text class='title'>为社区做贡献，帮社区写自动化测试代码</text>
