/* pages/publish/publish.wxss */

.title_input {
  position: relative;
  z-index: 2;
  height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}
.holder_input {
  font-size: 28rpx;
}
.select_title {
  top: 0;
  left: 0; 
  display: block;
  width: 100%;
  line-height: 80rpx;
  color: #666;
   background: #fff; 
}
.content {
  display: block;
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #666;
  border-bottom: 1rpx solid #eee;
}
.active {
  transform: translateY(0);
  transition: all 0.3s;
}
.unactive {
  transform: translateY(-100%);
  transition: all 0.3s;
}