/* pages/comment/comment.wxss */

.write_comment {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  background: #fff;
}
.textarea_text {
  height: 200rpx;
  padding: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 15rpx;
}
.textarea_content {
  height: 200rpx;
  font-size: 32rpx;
}
.btn_wrap {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
}
.btn {
  display: inline-block;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  background: #459dfc;
  text-align: center;
  font-weight: 500;
}