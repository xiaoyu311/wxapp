<!--pages/login/login.wxml-->
<view class='container login_wrap'>
  <view class='login_container'>
    <input bindinput="getUsername" placeholder='用户名' class='login_input'></input>
  </view>
  <view class='login_container'>
    <input bindinput="getPassword" placeholder='密码' password="{{true}}" class='login_input'></input>
  </view>
  <view catchtap='Login' class='btn_container login_container'>
    <text class='btn_text'>登录</text>
  </view>
</view>
