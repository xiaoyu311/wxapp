/**index.wxss**/
@import '../../lib/style/common.wxss';

.homeNav {
  position: relative;
  height: 86rpx;
  box-shadow: 0 2rpx 2rpx 0 #ccc;
  background: #fff;
}

.navList {
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  line-height: 80rpx;
  font-size: 30rpx;
  text-align: center;
  font-weight: 600;
  color: rgba(0, 2%, 8%, 0.726);
}

.navItem {
  color: #000;
  padding: 0 16rpx;
}

.activeTab {
  padding: 0 16rpx;
  color: #459dfc;
}

.nav-bottom {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 16.7%;
  height: 6rpx;
  background: #459dfc;
  transition: left 0.3s;
}

/* .lists {
  width: 100%;
} */

.topic_cell {
  width: 92%;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 40rpx;
  box-shadow: 0 4rpx 6rpx 6rpx #eee;
  background: #fff;
}

.topic_cell_avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.topic_cell .img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.author {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
}

.author_first {
  display: flex;
}

.time_wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}

.author_text {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.time_text {
  font-size: 30rpx;
  color: #999;
}

.tab_type {
  width: 78rpx;
  height: 48rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #858383;
  border-radius: 8rpx;
}

.top_text {
  font-size: 28rpx;
  color: #858383;
  font-weight: 600;
}
.top_active {
  border: 1rpx solid #2196F3;
}
.top_text_active {
  color: #2196F3;
}

.title_wrap {
  margin: 0rpx 20rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-bottom: 2rpx solid #eee;
}

.title_text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.list_foot {
  display: flex;
  padding: 20rpx;
  justify-content: space-between;
}

.list_item {
  display: flex;
  align-items: center;
}

.list_img {
  width: 44rpx;
  height: 44rpx;
  border-radius: 22rpx;
}

.list_text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #858383;
}
