/**index.wxss**/
@import '../../lib/style/common.wxss';

.tab_container {
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  overflow: hidden;
}
.tab_item {
  font-size: 28rpx;
}
.item_container {
  margin: 15rpx;
  padding: 20rpx 10rpx; 
  box-shadow: 0 0 7rpx #999999;
}
.title_container {
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
}
.title_text {
  font-size: 26rpx;
  font-weight: 600;
}
.content_container {
  margin-bottom: 10rpx;
}
.content_text {
  font-size: 26rpx;
}
.bottom_container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}